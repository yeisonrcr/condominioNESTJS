{
  "name": "rosedal2-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "Frontend monorepo - Rosedal II",
  "author": "Yeison",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:cliente": "turbo run dev --filter=cliente",
    "dev:admin": "turbo run dev --filter=admin",
    "dev:oficial": "turbo run dev --filter=oficial",
    "build": "turbo run build",
    "build:cliente": "turbo run build --filter=cliente",
    "build:admin": "turbo run build --filter=admin",
    "build:oficial": "turbo run build --filter=oficial",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^1.11.2",
    "prettier": "^3.1.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}